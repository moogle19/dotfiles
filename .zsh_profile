VIM=nvim

cdpath=($HOME/Documents/zahlz/repos/backend $HOME/Documents/q1/repos $HOME/Documents/zahlz/repos/mobile $HOME/Documents/repos)

export ERL_AFLAGS="-kernel shell_history enabled -kernel shell_history_file_bytes 2097152"
export PLUG_EDITOR=vscode-insiders://file/__FILE__:__LINE__
export PATH=$HOME/.elixir-ls:$PATH
# pnpm
export PNPM_HOME="/Users/kevin/Library/pnpm"
export PATH="$PNPM_HOME:$PATH"
# pnpm end
export PATH=/Users/kevin/.local/bin:$PATH
export PATH=/opt/homebrew/bin:$PATH
export CPLUS_INCLUDE_PATH=~/.asdf/installs/erlang/25.2.1/usr/include:$CPLUS_INCLUDE_PATH
export CXXFLAGS=-std=c++20
export KERL_BUILD_DOCS=yes

. $HOME/.asdf/asdf.sh

alias vim=nvim
alias zshr="source ~/.zshrc"
alias vimc="cd $HOME/.config/nvim/lua/moogle && nvim init.lua"
alias derived_clean="rm -rf $HOME/Library/Developer/Xcode/DerivedData/"

if [ -d "/opt/homebrew/opt/ruby/bin" ]; then
  export PATH=/opt/homebrew/opt/ruby/bin:$PATH
  export PATH=`gem environment gemdir`/bin:$PATH
fi

if which ruby > /dev/null && which gem > /dev/null; then
  GEM_PATH="$(ruby -r rubygems -e 'puts Gem.user_dir')/bin"
  export PATH="$GEM_PATH:$PATH"
fi
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
